// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  nickname     String
  email        String        @unique
  password     String
  userDetails  UserDetail?
  Socials      Social[]
  transactions Transaction[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @default(now()) @updatedAt
}

enum Gender {
  m
  f
}

model UserDetail {
  user      User      @relation(fields: [userId], references: [id])
  userId    Int       @id
  name      String?
  surname   String?
  city      String?
  phone     String?
  gender    Gender?
  birthdate DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
}

model Social {
  user      User     @relation(fields: [userId], references: [id])
  userId    Int      @id
  twitter   String?
  facebook  String?
  instagram String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Transaction {
  id        Int      @id @default(autoincrement())
  amount    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  User      User     @relation(fields: [userId], references: [id])
  userId    Int
}

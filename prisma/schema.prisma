// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  nickname     String
  email        String         @unique
  password     String
  userDetails  UserDetail?
  socials      Social[]
  transactions Transaction[]
  hospitals    UserHospital[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @default(now()) @updatedAt
}

enum Gender {
  m
  f
}

model UserDetail {
  user      User      @relation(fields: [userId], references: [id])
  userId    Int       @id
  name      String?
  surname   String?
  city      String?
  phone     String?
  gender    Gender?
  birthdate DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
}

model Social {
  user      User     @relation(fields: [userId], references: [id])
  userId    Int      @id
  twitter   String?
  facebook  String?
  instagram String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Transaction {
  id        Int      @id @default(autoincrement())
  amount    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}

model Hospital {
  id      Int            @id @default(autoincrement())
  extId   String         @unique
  name    String
  address String?
  users   UserHospital[]
}

model UserHospital {
  user   User @relation(fields: [userId], references: [id])
  userId Int

  hospital   Hospital @relation(fields: [hospitalId], references: [id])
  hospitalId Int

  @@id([userId, hospitalId])
}
